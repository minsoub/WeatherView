    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/ll_item"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/lifeweather_item_imgview"
                android:src="@drawable/weatherlife_circle_veryhigh"
                android:layout_gravity="center_vertical|center_horizontal"
                android:padding="20dp"
                android:scaleType="fitCenter"
                android:contentDescription="Icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_lifeweather_item_status"
                android:textColor="@android:color/darker_gray"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="15dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_lifeweather_item_value"
                android:textColor="@android:color/darker_gray"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="10dp"
                />
        </LinearLayout>


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_lifeweather_item_desc"
            android:textColor="@android:color/darker_gray"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:textSize="13dp"
            />

    </LinearLayout>


</LinearLayout>
